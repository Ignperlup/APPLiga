<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Liga de Padel Asociación Parque Flores</name>
    <description>
        4ª Liga de Padel
    </description>
    <author email="pl.ignacio@gmail.com" href="http://cordova.io">
        Ignacio Perez
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    

   
    <icon src="icon.png" />
    <icon src="icon.png" />
    <icon src="res/icon/android/icon-48-mdpi.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png"  gap:platform="android"    gap:qualifier="xhdpi" />


    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />

        <splash density="port-ldpi" src="img\drawable-ldpi\screen.png" />
        <splash density="port-mdpi" src="img\drawable-mdpi\screen.png" />
        <splash density="port-hdpi" src="img\drawable-hdpi\screen.png" />
        <splash density="port-xhdpi" src="img\drawable-xhdpi\screen.png" />
        <splash density="port-xxhdpi" src="img\drawable-xxhdpi\screen.png" />
        <splash density="port-xxxhdpi" src="img\drawable-xxxhdpi\screen.png" />

    </platform>
   
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
   
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="pushbots-cordova-plugin" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
